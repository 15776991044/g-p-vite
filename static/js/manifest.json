{
	"manifest_version": 3,
	"name": "图片收集测试",
	"description": "Vue3的Chrome插件vite版本",
	"version": "1.0.0",
  "action": {
		"default_icon": {
				"19": "icons/icon1.png"
		},
		"default_popup": "popup.html",
		"default_title": "图片收集测试"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"notifications",
		"webRequest",
		"storage",
		"cookies"
	],
	"host_permissions": [
	"https://www.baidu.com/*",
	"http://*/*",
	"https://*/*",
	"*://*/*",
	"<all_urls>"	  
	], 
	"externally_connectable": {
	"matches": ["*://*.xxxxxx.com/*"]
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"content_scripts": [
		{
				"matches": [
						"http://*/*",
						"https://*/*"
				],
				"css": [
					"css/name3.css",
					"css/name2.css"
				],
				"js": [
					"js/content.js"
				],
				"run_at": "document_end"
		}
	]
}
